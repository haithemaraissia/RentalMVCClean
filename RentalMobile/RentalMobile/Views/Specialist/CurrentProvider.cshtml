@using System.Globalization
@using RentalMobile.Helpers
@model List<RentalMobile.Models.SpecialistPendingTeamInvitation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
}
<section class="sixteen columns">
    <h2 class="remove-top">
        PROPERTY</h2>
    <!-- filters -->
    <form action="#" class="row">
        <!-- tag filters -->
        <ul class="filter-list ten alpha columns row">
            <li><a data-rel="all" class="current">All</a></li>
            <li><a data-rel="house">House</a></li>
            <li><a data-rel="duplex">Duplex</a></li>
            <li><a data-rel="townhouse">Townhouse</a></li>
            <li><a data-rel="apartment">Apartment</a></li>
            <li><a data-rel="loft">Loft</a></li>
            <li><a data-rel="office">Office</a></li>
            <li><a data-rel="condo">Condo</a></li>
        </ul>
        <div class="switcher fr">
            <a href="#" id="gridview" class="switcher"><i class="icon-layout"></i></a><a href="#"
                                                                                         id="listview" class="switcher active"><i class="icon-menu"></i></a>
        </div>
    </form>
    <div id="showing" class="panel">
        <section class="fifteen columns">
            <!-- List/Grid gallery -->
            <ul id="property-list" class="list-grid-gallery list">
                @foreach (var item in Model)
                {
                    <li class="prop-type all ">
                        <article>
                            <figure class="five columns alpha">
                                @Html.ActionLink("1", "Edit", new { id = item.PendingTeamInvitationID }, new { @class = "camera" })
                                <img src="@Html.GetMaintenanceProviderPrimaryPhoto(item.MaintenanceProviderId)" class="scale-with-grid" width="280" height="185"
                                     alt="gallery" />
                            </figure>
                            <div class="nine columns omega">
                                <h4>
                                   @* @item., @item.City, @item.State, @item.CountryCode*@</h4>
                                <ul class="prop-data">
                                    <li class="price">@*@Html.DisplayFor(modelItem => item.Price)*@</li>
                                    @*@if (item.UnitPricing != null)
                                    {
                                        if (item.UnitPricing.Rent != null)
                                        {
                                            <li class="new">
                                                @item.UnitPricing.Rent.Value.ToString(CultureInfo.InvariantCulture)
                                                <span style="color: #346993">@Html.GetCurrencyValue(item.UnitPricing.CurrencyId)</span>
                                            </li>
                                        }
                                    }*@
                                </ul>
                                <p class="prop-webid">
                                   @* Unit ID #@Html.DisplayFor(modelItem => item.UnitId)*@</p>
                                <p class="propr-details">
                                   @* @Html.GetBedValue(item.Bed) bedroom / @Html.GetBathroomValue(item.Bed) bathrom /
                                    @item.SquareFoot sqft*@
                                </p>
                                <p class="prop-extract">@*@Html.TruncateLongString(item.Description, 500)*@
                                </p>
                                <ul class="toolbar">
                                    <li>@Html.ActionLink("Select", "Preview", new { id = item.PendingTeamInvitationID })</li>
                                </ul>
                                
                               
                            </div>
                        </article>
                    </li>
                }
            </ul>
            <!-- /.List -->
            <style>
                #container
                {
                    width: 100%;
                    text-align: center;
                }
                
                #left
                {
                    float: left;
                    width: 50px;
                    height: 20px;
                    background: #ff0000;
                }
                
                #center
                {
                    display: inline-block;
                    margin: 0 auto;
                    width: 50px;
                    height: 20px;
                    background: #00ff00;
                }
                
                #right
                {
                    float: right;
                    width: 50px;
                    height: 20px;
                    background: #0000ff;
                }
            </style>
        </section>
        <section class="fifteen columns">
            <!--Pagination-->
            <div id="container">
                <div id="left">
                    Previous</div>
                <div id="center">
                    Page 1 of 10</div>
                <div id="right">
                    Next</div>
            </div>
            <!--Pagination-->
        </section>
    </div>
</section>



<section class="sixteen columns" id="DesignDecision">
    <h2>
        Property</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PendingTeamInvitationID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PendingTeamInvitationID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PendingTeamInvitationID })
                </td>
            </tr>
        }
    </table>
</section>
