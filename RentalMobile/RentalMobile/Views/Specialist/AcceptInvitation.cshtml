@model RentalMobile.Model.Models.SpecialistPendingTeamInvitation
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
    if (ViewBag.ConfirmationSuccess != null && ViewBag.Confirmation == true)
    {
        ViewBag.Confirmation = false;
        <link rel="stylesheet" type="text/css" href="../../Scripts/jNotify-master/jquery/jNotify.jquery.css"
              media="screen" />
        <script type="text/javascript" src="../../Scripts/jNotify-master/jquery/jNotify.jquery.js"></script>
        <script language='javascript' type='text/javascript'>
            @Html.Raw(ViewBag.ConfirmationSuccess)
        </script>
    }
    if (@Model != null)
        {
   <h2 class="remove-top BlueHeading">
        Confirmation of Association Acceptance</h2>
    <p>
        By clicking confirm, you will approve your association with Team @Model.TeamName</p>
  
        }

        using (Html.BeginForm("AcceptInvitation", "Specialist", FormMethod.Post))
        {
    @Html.HiddenFor(m => m.PendingTeamInvitationID)
    @Html.HiddenFor(m => m.TeamId)
    @Html.HiddenFor(m => m.TeamName)
    @Html.HiddenFor(m => m.MaintenanceProviderId)
    @Html.HiddenFor(m => m.SpecialistID)

    <section class="row">
        <div class="sixteen columns">
            <div class="seven columns" style="float: right">
                <input type="submit" class="full-width tall" value="Confirm" />
            </div>
        </div>
    </section>
        }


    }


