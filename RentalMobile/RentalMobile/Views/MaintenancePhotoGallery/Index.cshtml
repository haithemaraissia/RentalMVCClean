@model IEnumerable<RentalMobile.Models.MaintenancePhoto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            MaintenanceOrder
        </th>
        <th>
            PhotoID
        </th>
        <th>
            PhotoPath
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaintenanceOrder.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoPath)
            <img src="@Url.Content(item.PhotoPath)"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { Id = item.PhotoID }) |
            @Html.ActionLink("Details", "Details", new { Id = item.PhotoID }) |
            @Html.ActionLink("Delete", "Delete", new { Id = item.PhotoID }) |
        </td>
    </tr>
}

</table>
