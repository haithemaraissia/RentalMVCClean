@using System.Web.Mvc.Html
@using RentalMobile.Helpers
@model IEnumerable<RentalMobile.Model.Models.Owner>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
    	
}
<section class="eleven columns">
    <h2 class="remove-top">
        Agent</h2>
    <!-- filters -->
    <form action="#" class="row">
    <!-- tag filters -->
    <ul class="filter-list nine alpha columns row">
        <li><a data-rel="all" class="current">All</a></li>
        <li><a data-rel="house">House</a></li>
        <li><a data-rel="appartment">Apartment</a></li>
        <li><a data-rel="loft">Loft</a></li>
        <li><a data-rel="offices">Offices</a></li>
        <li><a data-rel="condos">Condos</a></li>
    </ul>
    <div class="switcher fr">
        <a href="#" id="gridview" class="switcher"><i class="icon-layout"></i></a><a href="#"
            id="listview" class="switcher active"><i class="icon-menu"></i></a>
    </div>
    </form>
    <!-- List/Grid gallery -->
    <ul id="property-list" class="list-grid-gallery list">
        @foreach (var item in Model)
        {
            <li class="prop-type all @* @Html.GetUnitType(item.TypeId)*@">
                <article>
                    <figure class="five columns alpha">
                        @Html.ActionLink(" ", "Index", "OwnerProfile", new { id = item.OwnerId }, new { @class = "camera" })
                        <img src="@item.Photo" class="scale-with-grid" style="min-height: 185px" alt="gallery" />
                    </figure>
                    

                    <div class="five columns omega">
                        <h4>
                            <span style="color: #396991">@item.FirstName @item.LastName</span>
                        </h4>
                        <h5 style="margin-bottom: 10px;">
                            <span>@item.Address, @item.City, @item.Region, @item.CountryCode</span>
                        </h5>
                        <p class="prop-extract" style="margin-bottom: 5px;">
                            <span>@Html.TruncateLongString(item.Description, 500)</span>
                        </p>
                        <p class="prop-webid">
                            <span style="color: #396991">Agent ID <b>#@Html.DisplayFor(modelItem => item.OwnerId)</b>
                            </span>
                            </p>
                        <ul class="toolbar">
                            <li class="next-arr">@Html.ActionLink("Select", "Index", "OwnerProfile", new { id = item.OwnerId }, null)</li>
                        </ul>
                    </div>
                </article>
                
            </li>
        }
    </ul>
    <!-- /.List -->
</section>
<!-- /section: gallery -->
<aside class="five columns top-padded">
    <div class="shadded boxed save-search">
        <button class="tall centered">
            Save this search</button>
        <p>
            <small>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit tenetur nulla.</small></p>
        <a href="#">Resent searches</a>
    </div>
    <div class="shadded boxed slider">
        <h4 class="remove-top add-bottom">
            Homes you might like</h4>
        <ul class="bx-slider-points">
            <li>
                <img src="../../images/dotimages/sliders/home2-slide.png" class="scale-with-grid"
                    alt="//" />
                <h6>
                    A property title</h6>
                <p class="price">
                    <span>$1.450.000</span></p>
            </li>
            <li>
                <img src="../../images/dotimages/sliders/home2-slide.png" class="scale-with-grid"
                    alt="//" />
                <h6>
                    Second Property</h6>
                <p class="price">
                    <span>$910.000</span></p>
            </li>
            <li>
                <img src="../../images/dotimages/sliders/home2-slide.png" class="scale-with-grid"
                    alt="//" />
                <h6>
                    Other description
                </h6>
                <p class="price">
                    <span>$2.135.000</span></p>
            </li>
            <li>
                <img src="../../images/dotimages/sliders/home2-slide.png" class="scale-with-grid"
                    alt="//" />
                <h6>
                    Other description</h6>
                <p class="price">
                    <span>$2.135.000</span></p>
            </li>
            <li>
                <img src="../../images/dotimages/sliders/home2-slide.png" class="scale-with-grid"
                    alt="//" />
                <h6>
                    Other description<h6>
                        <p class="price">
                            <span>$2.135.000</span></p>
            </li>
        </ul>
    </div>
    <!-- /boxed mini slider -->
    <div class="shadded boxed relative">
        <h4 class="remove-top add-bottom">
            Search</h4>
        @*    @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch", new { @class = "fly-out"})*@
        @*                   @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch", null, new { @class = "fly-out", @style = "width:100px; color: red;" })*@
        @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch", null, new { @class = "fly-out" })
        @*<a href="AdvancedSearch" class="fly-out">Advanced searches</a>*@
        <form action="#" class="remove-bottom">
        <ul class="grid-form">
            <li class="relative">
                <label for="location-select" class="screen-reader-text">
                    Location</label>
                <select id="location-select" class="custom-select" title="Location">
                    <option value="1">Location</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </li>
            <li class="relative">
                <label for="type-select" class="screen-reader-text">
                    Property type</label>
                <select id="type-select" class="custom-select" title="Property type">
                    <option value="1">Property type</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </li>
            <li>
                <label for="price-field" class="screen-reader-text">
                    Price</label>
                <input type="text" id="price-field" placeholder="Price">
            </li>
            <li>
                <label for="rooms-field" class="screen-reader-text">
                    Rooms</label>
                <input type="text" id="rooms-field" placeholder="Rooms">
            </li>
            <li>
                <label for="keywords-field" class="screen-reader-text">
                    Keywords</label>
                <input type="text" id="keywords-field" placeholder="Keywords">
            </li>
        </ul>
        <input type="submit" value="Find my place" class="remove-bottom tall centered">
        </form>
    </div>
    <!-- /boxed search form -->
    <div class="shadded boxed form">
        <h4 class="remove-top add-bottom">
            Mortgage calculator</h4>
        <form action="#" class="remove-bottom">
        <ul class="grid-form remove-bottom">
            <li>
                <label for="price-field" class="screen-reader-text">
                    House Price</label>
                <input id="price-field" type="text" placeholder="House price" required />
            </li>
            <li>
                <label for="payment-field" class="screen-reader-text">
                    Down payment</label>
                <input id="payment-field" type="text" placeholder="Down payment" required />
            </li>
            <li>
                <label for="interest-field" class="screen-reader-text">
                    Annual Interest</label>
                <input id="interest-field" type="text" placeholder="Interest" required />
            </li>
            <li>
                <label for="term-field" class="screen-reader-text">
                    Term</label>
                <input id="term-field" type="text" placeholder="Term" />
            </li>
            <li>
                <label for="month-field" class="screen-reader-text">
                    Monthly Payment</label>
                <input id="month-field" type="text" placeholder="Monthly Payment" />
            </li>
        </ul>
        <input type="submit" value="Calculate" class="remove-bottom tall centered">
        </form>
    </div>
    <!-- /boxed mortgage form -->
</aside>
