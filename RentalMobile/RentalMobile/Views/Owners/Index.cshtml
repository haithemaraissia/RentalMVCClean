<script src="../../Scripts/js/scripts.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function ($) {

        // Init bx slider 
        $('.bx-slider-points').bxSlider({
            controls: false
        });

        //Custom selects
        $('.custom-select').customSelect();

    });
</script>
