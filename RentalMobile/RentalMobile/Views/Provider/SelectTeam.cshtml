@using System.Web.Mvc.Html
@using PagedList.Mvc
@using RentalMobile
@using RentalMobile.Helpers
@model PagedList.IPagedList<RentalMobile.Model.Models.MaintenanceTeam>
@{
    ViewBag.Title = "Select Team ";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
 }
<section class="sixteen columns">
    <h3 class="tagline">Select Team</h3>
</section>
<section class="sixteen columns">
    <form action="#" class="row">
    <div class="switcher fr">
        <a href="#" id="gridview" class="switcher"><i class="icon-layout"></i></a><a href="#"
         id="listview" class="switcher active"><i class="icon-menu"></i></a>
    </div>
    </form>
    @if (Model.Count > 0)
    {   
        <div>
            @Html.PagedListPager(Model, page => Url.Action("SelectTeam", new { page }), new PagedListRenderOptions
                {
                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    DisplayLinkToIndividualPages = false,
                    ContainerDivClasses = null,
                    UlElementClasses = new[] { "pager" },
                    ClassToApplyToFirstListItemInPager = "previous",
                    ClassToApplyToLastListItemInPager = "next",
                    LinkToPreviousPageFormat = "&larr; Older",
                    LinkToNextPageFormat = "Newer &rarr;",
                    DisplayPageCountAndCurrentLocation = true
                })
        </div>      
        <ul id="property-list" class="list-grid-gallery list">
            @foreach (var item in Model)
            {
                <li>
                    <article>
                        <figure class="five columns alpha">
                            @Html.ActionLink(" ", "Index", "Providers", new { id = item.MaintenanceProviderId }, new { @class = "camera", target = "_blank" })
                            <img src="@{ new ViewHelper().GetTeamPrimaryPhoto(@item.TeamId); }" class="scale-with-grid" style="min-height: 185px" alt="gallery" />
                        ></figure>
                        <div class="ten columns omega">
                            <h4>
                                <span style="color: #396991"><a href="../../Providers/@item.MaintenanceProviderId" target="_blank" >@item.TeamName</a></span>
                            </h4>
                            <p>
                                <span style="color: #396991"><a href="../../Providers/@item.MaintenanceProviderId" target="_blank">
                                    Team ID <b># @Html.DisplayFor(modelItem => item.MaintenanceProviderId)</b> </a>
                                </span>
                            </p>
                            <ul class="toolbar">
                                  <li class="next-arr">@Html.ActionLink("Select Team", "InviteTeamMember", "Provider", new { stid = item.TeamId, pid = @ViewBag.SelectedSpecialistId }, null)
                                </li>
                       
                            </ul>
                        </div>
                    </article>
                </li>
            }
        </ul>
        <div>
            @Html.PagedListPager(Model, page => Url.Action("SelectTeam", new { page }), new PagedListRenderOptions
                {
                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    DisplayLinkToIndividualPages = false,
                    ContainerDivClasses = null,
                    UlElementClasses = new[] { "pager" },
                    ClassToApplyToFirstListItemInPager = "previous",
                    ClassToApplyToLastListItemInPager = "next",
                    LinkToPreviousPageFormat = "&larr; Older",
                    LinkToNextPageFormat = "Newer &rarr;",
                    DisplayPageCountAndCurrentLocation = true
                })
        </div>         
    }
    else
    {
        <br />
        <p>
            You have no Team Member at this moment.</p>
        <section class="row">
            <div class="sixteen columns">
                <div class="five columns" style="float: right">
                    <input type="submit" class="full-width tall" value="Ok" onclick=" location.href = '/Provider' " />
                </div>
            </div>
        </section>
    }
</section>
<!-- Scripts & Plugins
        ================================================== -->
<!-- Gallery switcher -->
<script src="../../Scripts/js/switcher.js" type="text/javascript"></script>
