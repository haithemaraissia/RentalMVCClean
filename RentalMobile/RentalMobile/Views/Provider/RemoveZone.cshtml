@model RentalMobile.Models.MaintenanceProviderZone
@{
    ViewBag.Title = "Remove Zone ";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
    if (ViewBag.ConfirmationSuccess != null && ViewBag.Confirmation == true)
    {
        ViewBag.Confirmation = false;
    <link rel="stylesheet" type="text/css" href="../../Scripts/jNotify-master/jquery/jNotify.jquery.css"
        media="screen" />
    <script type="text/javascript" src="../../Scripts/jNotify-master/jquery/jNotify.jquery.js"></script>
    <script language='javascript' type='text/javascript'>
            @Html.Raw(ViewBag.ConfirmationSuccess)
    </script>
    }

    <style>
        .validation-summary-errors
        {
            font-weight: bold;
            font-size: 12px;
            padding-left: 45px;
            padding-top: 10px;
            color: #c00;
            background: #E6C0C0 url("/Images/notice-alert.png") 5px 5px no-repeat;
            border-top: 3px solid #DE7A7B;
            border-bottom: 3px solid #DE7A7B;
            text-align: left;
            margin-top: 10px;
            min-height: 30px;
        }
    </style>
}
<section class="sixteen columns">
    @Html.ValidationSummary(false)
    <h4 id="ValidatioMessage">@Html.ValidationMessageFor(m => m.ZipCode)</h4>
    <h2 class="tagline">
        Removing Zone</h2>
    <br />
</section>
<h3 class="remove-top BlueHeadingNoMargin">
    Are you sure you want to delete this zone?</h3>
<fieldset>
    <div class="sixteen columns prop-details">
        <div class="seven columns push by-one">
            <label class="full-width tall button">
                City</label>
            <div style="text-align: center">
                <label class="full-width tall" id="EditZoneButton" style="margin-bottom: 10px">@Html.DisplayFor(model => model.CityName)</label>
            </div>
        </div>
        <div class="seven columns push by-one">
            <label class="full-width tall button ">
                Zipcode</label>
            <div style="text-align: center">
                <label class="full-width tall" id="ViewZoneButton" style="margin-bottom: 10px">
                    @Html.DisplayFor(model => model.ZipCode)</label>
            </div>
        </div>
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <div class="sixteen columns">
        <div class="sixteen columns">
            <div style="margin: 0 auto">
                <input type="submit" value="Delete" />
                | <a class="button" href="../../Provider#coverage">Back</a>
            </div>
        </div>
    </div>
}
