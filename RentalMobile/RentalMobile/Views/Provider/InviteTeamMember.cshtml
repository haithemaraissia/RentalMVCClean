@using System.Web.Mvc.Html
@model IEnumerable<RentalMobile.Models.MaintenanceTeam>
@{
    ViewBag.Title = "Add Team Member ";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";


    if (ViewBag.ConfirmationSuccess != null && ViewBag.Confirmation == true)
    {
        ViewBag.Confirmation = false;
        
    <link rel="stylesheet" type="text/css" href="../../Scripts/jNotify-master/jquery/jNotify.jquery.css"
        media="screen" />
    <script type="text/javascript" src="../../Scripts/jNotify-master/jquery/jNotify.jquery.js"> </script>

    @:<!-- jNotify -->
    <script language='javascript' type='text/javascript'>
        @Html.Raw(ViewBag.ConfirmationSuccess);

    </script>
    }
    
    
    
    
}
<section class="sixteen columns">
    <h3 class="tagline">
        INVITATION FOR JOINING</h3>
</section>
<section class="sixteen columns">
    <h2>
        Team</h2>
    <!-- filters -->
    <form action="#" class="row">
    <div class="switcher fr">
        <a href="#" id="gridview" class="switcher"><i class="icon-layout"></i></a><a href="#"
            id="listview" class="switcher active"><i class="icon-menu"></i></a>
    </div>
    </form>
    <!-- List/Grid gallery -->
    <ul id="property-list" class="list-grid-gallery list">
        @using (Html.BeginForm("InviteTeamMember", "Provider", FormMethod.Post))
        {
            @Html.ValidationSummary(true)

             
            if (Model != null)
            {


                foreach (var item in Model)
                {
            <li class="prop-type all ">
                <article>
                    <figure class="five columns alpha">
                        @Html.ActionLink(" ", "Index", "Professionals", new { id = item.TeamId }, new { @class = "camera" })
                    </figure>
                    <div class="five columns omega">
                        <h4>
                            <span style="color: #396991">@item.TeamName</span> Team ID = @item.TeamId
                        </h4>
                        <ul class="toolbar">
                            <li class="next-arr">
                                <input type="submit" value="Invite" />
                            </li>
                        </ul>
                    </div>
                </article>
            </li>
                }
            }

        }
    </ul>
    <!-- /.List -->
</section>
<!-- /section: rent -->
