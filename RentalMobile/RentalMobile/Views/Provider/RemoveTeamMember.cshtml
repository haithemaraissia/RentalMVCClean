@using System.Web.Mvc.Html
@using PagedList.Mvc
@using RentalMobile.Helpers
@model PagedList.IPagedList<RentalMobile.Model.Models.Specialist>
@{
    ViewBag.Title = "Remove Team Member ";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";

    <section class="sixteen columns">
        <h3 class="tagline">Removing Team Member</h3>
    </section>
    <section class="sixteen columns">
        <form action="#" class="row">
        <div class="switcher fr">
            <a href="#" id="gridview" class="switcher"><i class="icon-layout"></i></a><a href="#"
                id="listview" class="switcher active"><i class="icon-menu"></i></a>
        </div>
        </form>
        @if (Model.Count > 0)
        {  
            <div>
                @Html.PagedListPager(Model, page => Url.Action("RemoveTeamMember", new { page }), new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = false,
                        DisplayLinkToLastPage = false,
                        DisplayLinkToPreviousPage = true,
                        DisplayLinkToNextPage = true,
                        DisplayLinkToIndividualPages = false,
                        ContainerDivClasses = null,
                        UlElementClasses = new[] { "pager" },
                        ClassToApplyToFirstListItemInPager = "previous",
                        ClassToApplyToLastListItemInPager = "next",
                        LinkToPreviousPageFormat = "&larr; Older",
                        LinkToNextPageFormat = "Newer &rarr;",
                        DisplayPageCountAndCurrentLocation = true
                    })
            </div> 
            <ul id="property-list" class="list-grid-gallery list">
                @foreach (var item in Model)
                {
                    <li>
                        <article>
                            <figure class="five columns alpha">
                                @Html.ActionLink(" ", "Index", "Professionals", new { id = item.SpecialistId }, new { @class = "camera", target = "_blank" })
                                <img src="@item.Photo" class="scale-with-grid" style="min-height: 185px" alt="gallery" />
                            </figure>
                            <div class="ten columns omega">
                                <h4>
                                    <span style="color: #396991"><a href="../Professionals/@item.SpecialistId" target="_blank">@item.FirstName
                                        @item.LastName</a></span>
                                </h4>
                                <h5 style="margin-bottom: 10px;">
                                    <span>@item.Address, @item.City, @item.Region, @item.CountryCode</span>
                                </h5>
                                <p style="margin-bottom: 5px;">
                                    <span>@Html.TruncateLongString(item.Description, 500)</span>
                                </p>
                                <p>
                                    <span style="color: #396991"><a href="../Professionals/@item.SpecialistId" target="_blank">
                                        Specialist ID <b># @Html.DisplayFor(modelItem => item.SpecialistId)</b> </a>
                                    </span>
                                </p>
                                <ul class="toolbar">
                                    <li class="next-arr">@Html.ActionLink("Select Specialist", "RemoveFromTeam", "Provider", new { pid = item.SpecialistId }, null)
                                    </li>
                                </ul>
                            </div>
                        </article>
                    </li>
                }
            </ul> 
            <div>
                @Html.PagedListPager(Model, page => Url.Action("RemoveTeamMember", new { page }), new PagedListRenderOptions
           {
               DisplayLinkToFirstPage = false,
               DisplayLinkToLastPage = false,
               DisplayLinkToPreviousPage = true,
               DisplayLinkToNextPage = true,
               DisplayLinkToIndividualPages = false,
               ContainerDivClasses = null,
               UlElementClasses = new[] { "pager" },
               ClassToApplyToFirstListItemInPager = "previous",
               ClassToApplyToLastListItemInPager = "next",
               LinkToPreviousPageFormat = "&larr; Older",
               LinkToNextPageFormat = "Newer &rarr;",
               DisplayPageCountAndCurrentLocation = true
           })
            </div>         
        }
        else
        { 
            <br />
            <p>
                You have no Team Member at this moment.</p>
            <section class="row">
                <div class="sixteen columns">
                    <div class="five columns" style="float: right">
                        <input type="submit" class="full-width tall" value="Ok" onclick=" location.href = '/Provider' " />
                    </div>
                </div>
            </section>
        }
    </section>
    <!-- Scripts & Plugins
        ================================================== -->
    <!-- Gallery switcher -->
    <script src="../../Scripts/js/switcher.js" type="text/javascript"></script>
}
