@model dynamic

@{
    ViewBag.Title = "Advanced Search";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
    //Layout = "~/Views/Shared/_DotLayoutPage.cshtml";
    	
    }
<!-- Section: map -->
			<section class="sixteen columns add-bottom">
				<iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com.ar/maps?f=q&amp;source=s_q&amp;hl=es-419&amp;geocode=&amp;q=Chicago,+Illinois,+Estados+Unidos&amp;aq=0&amp;oq=chicago&amp;sll=40.720201,-73.944855&amp;sspn=0.15196,0.308647&amp;vpsrc=6&amp;ie=UTF8&amp;hq=&amp;hnear=Chicago,+Condado+de+Cook,+Illinois,+Estados+Unidos&amp;ll=41.878114,-87.629798&amp;spn=0.037321,0.077162&amp;t=m&amp;z=14&amp;output=embed"></iframe>
			</section>
			<!-- /section: map -->

			<!-- Section: search form -->
			<form action="#">
				
				<ul class="grid-form row">
					<li class="one-third column half-bottom relative">
						<label for="location-select" class="screen-reader-text">Location</label>
						<select id="location-select" class="custom-select">
							<option value="location">Location</option>
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
						</select>
					</li>
					<li class="one-third column half-bottom relative">
						<label for="type-select" class="screen-reader-text">Property type</label>
						<select id="type-select" class="custom-select">
							<option value="property type">Property Type</option>
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
						</select>					
					</li>
					<li class="one-third column half-bottom">
						<label for="keywords-field" class="screen-reader-text">Keywords</label>
						<input id="keywords-field" type="text" placeholder="Keywords" />
					</li>
					<li class="seven columns add-bottom">
						<label for="price-slider" class="text-centered">Price</label>
						<div id="price-range"></div>
						<input id="price-slider" type="text" class="no-ui" readonly />
					</li>
					<li class="seven columns push by-two add-bottom">
						<label for="beds-slider" class="text-centered">Beds</label>
						<div id="beds-range"></div>
						<input id="beds-slider" type="text" class="no-ui" readonly />
					</li>
					<li class="seven columns add-bottom">
						<label for="baths-slider" class="text-centered">Baths</label>
						<div id="baths-range"></div>
						<input id="baths-slider" type="text" class="no-ui" readonly />
					</li>
					<li class="seven columns push by-two add-bottom">
						<label for="meters-slider" class="text-centered">Meters</label>
						<div id="meters-range"></div>
						<input id="meters-slider" type="text" class="no-ui" readonly />
					</li>
				</ul>


			</form>
			<!-- /section: search form -->










	<!-- Scripts & Plugins
  	================================================== -->
	
	<!-- jQuery UI-->
	<script src="../../Scripts/js/jquery-ui.min.js" type="text/javascript"></script>
	<!-- jQuery Custom selects-->
	<script src="../../Scripts/js/jquery.customSelect.min.js" type="text/javascript"></script>
	<!-- jQuery dropdown -->
	<script src="../../Scripts/js/jquery.dropdown.js" type="text/javascript"></script>
	<!-- Tipsy -->
	<script src="../../Scripts/js/jquery.tipsy.js" type="text/javascript"></script>
	<!-- Custom Scripts -->
	<script src="../../Scripts/js/scripts.js" type="text/javascript"></script>

	<script>
	    $(function () {

	        //Custom selects
	        $('.custom-select').customSelect();

	        //Price range slider
	        $("#price-range").slider({
	            range: true,
	            min: 0,
	            max: 140000,
	            step: 1000,
	            values: [20000, 120000],
	            slide: function (event, ui) {
	                $("#price-slider").val("$" + ui.values[0] + " - $" + ui.values[1]);
	            }
	        });
	        $("#price-slider").val("$" + $("#price-range").slider("values", 0) +
	            " - $" + $("#price-range").slider("values", 1));

	        //Beds range slider
	        $("#beds-range").slider({
	            range: true,
	            min: 1,
	            max: 5,
	            values: [2, 4],
	            slide: function (event, ui) {
	                $("#beds-slider").val(ui.values[0] + " - " + ui.values[1]);
	            }
	        });
	        $("#beds-slider").val($("#beds-range").slider("values", 0) +
	            " - " + $("#beds-range").slider("values", 1));

	        //Baths range slider
	        $("#baths-range").slider({
	            range: true,
	            min: 1,
	            max: 5,
	            values: [2, 4],
	            slide: function (event, ui) {
	                $("#baths-slider").val(ui.values[0] + " - " + ui.values[1]);
	            }
	        });
	        $("#baths-slider").val($("#baths-range").slider("values", 0) +
	            " - " + $("#baths-range").slider("values", 1));

	        //Meters range slider
	        $("#meters-range").slider({
	            range: true,
	            min: 20,
	            max: 800,
	            values: [80, 740],
	            step: 20,
	            slide: function (event, ui) {
	                $("#meters-slider").val(ui.values[0] + " mts - " + ui.values[1] + " mts");
	            }
	        });
	        $("#meters-slider").val($("#meters-range").slider("values", 0) +
	            " mts - " + $("#meters-range").slider("values", 1) + " mts");
	    });

	</script>
