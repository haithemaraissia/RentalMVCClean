@model RentalMobile.Models.Owner
@{
    ViewBag.Title = "Edit Owner Profile";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link   href="@Url.Content("~/css/dotcss/fancy.css")" rel="stylesheet" type="text/css">
<section class="sixteen columns add-bottom relative">
    @using (Html.BeginForm("Edit", "Owner", FormMethod.Post, new { @class = "fancy-form" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>EDIT PROFILE</legend>
            <ul class="grid-form sixteen columns push by-one remove-bottom">
                <li class="six columns alpha  pull by-one">
                    @Html.HiddenFor(model => model.OwnerId)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.FirstName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  push by-two">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LastName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  pull by-one">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.VCard)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.VCard)
                        @Html.ValidationMessageFor(model => model.VCard)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  push by-two">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Skype)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Skype)
                        @Html.ValidationMessageFor(model => model.Skype)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  pull by-one">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Twitter)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Twitter)
                        @Html.ValidationMessageFor(model => model.Twitter)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  push by-two">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LinkedIn)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.LinkedIn)
                        @Html.ValidationMessageFor(model => model.LinkedIn)
                    </div>
                    <br />
                </li>
                <li class="six columns alpha  pull by-one">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.GooglePlus)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.GooglePlus)
                        @Html.ValidationMessageFor(model => model.GooglePlus)
                    </div>
                    <br />
                </li>
                <li class="fourteen columns pull by-one alpha">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div>
                        @Html.TextAreaFor(model => model.Description, new { row = "20", required = "required", @class = "full-width", placeholder = "Description" })
                    </div>
                    <br />
                </li>
            </ul>
            <div>
                @Html.HiddenFor(model => model.Address)
                @Html.HiddenFor(model => model.EmailAddress)
                @Html.HiddenFor(model => model.GUID)
                @Html.HiddenFor(model => model.Photo)
                @Html.HiddenFor(model => model.Country)
                @Html.HiddenFor(model => model.Region)
                @Html.HiddenFor(model => model.City)
                @Html.HiddenFor(model => model.Zip)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
</section>
<div>
    @Html.ActionLink("Back", "Index")
</div>
