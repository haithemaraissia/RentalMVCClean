@model RentalMobile.Models.Owner
@{
    ViewBag.Title = "Owner Profile";
    Layout = "~/Views/Shared/Profiles/_Owner.cshtml";
}
@section profile
{
    @Html.Partial("_ProfileDetail", (object)ViewBag.Owner)
}
@section map
{
    <div id="map" class="panel">
        <iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.co.in/maps?q=@ViewBag.OwnerGoogleMap&amp;z=13&amp;output=embed">
        </iframe>
        <br />
    </div>
}
@section account
{
    <div id="account" class="panel">
        <section class="row double-bottom">
            <div class="sixteen columns prop-details">
                <div class="six columns push by-one">
                    <input type="submit" class="full-width tall" value="Edit Profile" onclick="location.href='/Owner/Edit/@ViewBag.OwnerId'"/>
                </div>
                <div class="six columns push by-two">
                    <input type="submit" class="full-width tall" value="Edit Email" onclick="location.href='/Account/ChangeEmail'" />
                </div>
            </div>
            <div class="sixteen columns prop-details">
                <div class="six columns push by-one">
                    <input type="submit" class="full-width tall" value="Change Passowrd" onclick="location.href='/Account/ChangePassword'" />
                </div>
                <div class="six columns push by-two">
                    <input type="submit" class="full-width tall" value="Change Address" onclick="location.href='/Owner/ChangeAddress/@ViewBag.OwnerId'"/>
                </div>
            </div>
            <div class="sixteen columns prop-details">
                <div class="six columns push by-one">
                    <input type="submit" class="full-width tall" value="Delete Account" onclick="location.href='/Owner/Delete/@ViewBag.OwnerId'"/>
                </div>
                <div class="six columns push by-two">
                    <input type="submit" class="full-width tall" value="Update Photo" onclick="location.href='/Owner/UpdateProfilePicture/@ViewBag.OwnerId'"/>
                </div>
            </div>
        </section>
    </div>
}
@section property
{
   <div id="property" class="panel">
        <section class="row double-bottom">
            <div class="sixteen columns prop-details">
                <div class="six columns push by-one">
                    <input type="submit" class="full-width tall" value="Add Property" onclick="location.href='/Unit/Create'"/>
                </div>
                <div class="six columns push by-two">
                    <input type="submit" class="full-width tall" value="View Property" onclick="location.href='/Unit/Index'" />
                </div>
            </div>
            <div class="sixteen columns prop-details">
                <div class="six columns push by-one">
                    <input type="submit" class="full-width tall" value="Edit Property" onclick="location.href='/Unit/Index'" />
                </div>
                <div class="six columns push by-two">
                    <input type="submit" class="full-width tall" value="Delete Property" onclick="location.href='/Unit/Index'"/>
                </div>
            </div>
        </section>
    </div>
}


@section project
