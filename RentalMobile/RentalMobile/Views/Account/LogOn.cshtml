@using RentalMobile.Helpers
@model RentalMobile.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
}
<section class="nine columns add-bottom relative">
    <h2>
        Sign in</h2>
    <p>
        Please enter your user name and password. @Html.ActionLink("Register", "Register")
        if you don't have an account.
    </p>
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    @using (Html.BeginForm())
    {
        <fieldset>
            <label>
                <span class="entypo"><i class="icon-user"></i></span>
                @Html.TextBoxFor(m => m.UserName, new { required = "required", placeHolder = "User Name", Class = "inline remove-bottom" })
                @Html.ValidationMessageFor(m => m.UserName)
            </label>
            <br />
            <label>
                <span class="entypo"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { required = "required", placeholder = "Password", Class = "inline remove-bottom" })
                @Html.ValidationMessageFor(m => m.Password)
            </label>
            <br />
            <label class="login-label-spacing">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "inline remove-bottom login-label-spacing" })
            </label>
            <br />
            @Html.DropDownListFor(x => x.Role, Html.GetRoles(), new { @class = "custom-select" })
            <input type="submit" class="submit" value="Log On" />
            <p>
                Forgot your password? @Html.ActionLink("Click here to retrieve your Password.", "ForgotPassword", "Account")
            </p>
        </fieldset>
   
    }
</section>
<!-- /section: search form -->
<!-- Aside -->
<aside class="seven columns">
    <h2>
        Login with Social Buttons</h2>
    <div class="boxed shadded wide-on-small-screen">
        <ul class="grid-form row remove-bottom">
            <li class="six columns"><a class="twitter-registration" href="#">Sign in with your Twitter
                account</a> </li>
            <li class="six columns"><a class="facebook-registration" href="#">Sign in with your
                Facebook account</a> </li>
            <li class="six columns"><a class="google-registration" href="#">Sign in with your Google
                account</a> </li>
        </ul>
    </div>
</aside>
<!-- /aside -->
@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
