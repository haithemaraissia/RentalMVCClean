@using RentalMobile.Helpers
@model RentalMobile.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Template/_ConceptLayoutPage.cshtml";
}
<!-- Section: search form -->
<section class="nine columns add-bottom relative">
    <h2>
        Registration Form</h2>
    <small class="fly-out">Agree with all the terms and conditions</small>
    @using (Html.BeginForm("Register","Account",  new { @class = "boxed shadded wide-on-small-screen" }))
    {
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
        
        <ul class="grid-form row remove-bottom">
            <li class="four columns">
                @Html.TextBoxFor(m => m.UserName, new { required = "required", CssClassPropertyAttribute = "full-width", placeholder = "Name" })
                @Html.ValidationMessageFor(m => m.UserName)
                <li class="four columns omega">
                    @Html.TextBoxFor(m => m.Email, new { type = "email", required = "required", CssClassPropertyAttribute = "full-width", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </li>
                <li class="four columns">
                    @Html.PasswordFor(m => m.Password, new { type = "password", required = "required", CssClassPropertyAttribute = "full-width", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li class="four columns omega">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { type = "password", required = "required", CssClassPropertyAttribute = "full-width", placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </li>
            <li class="eight columns omega">
                @Html.DropDownListFor(x => x.Role, Html.GetRoles(), new { @class = "custom-select" })
            </li>
                <li class="six columns"><small>All the fields are required.</small> </li>
                <li class="two columns omega">
                    <input type="submit" value="Register" />
                </li>
        </ul>
    }
</section>
<!-- /section: search form -->
<!-- Aside -->
<aside class="seven columns">
    <h2>
        Login with Social Buttons</h2>
    <div class="boxed shadded wide-on-small-screen">
        <ul class="grid-form row remove-bottom">
            <li class="six columns"><a class="twitter-registration" href="#">Sign up with your Twitter
                account</a> </li>
            <li class="six columns"><a class="facebook-registration" href="#">Sign up with your
                Facebook account</a> </li>
            <li class="six columns"><a class="google-registration" href="#">Sign up with your Google
                account</a> </li>
        </ul>
    </div>
</aside>
<!-- /aside -->
@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
