@using System.Globalization
@model RentalMobile.Models.Specialist
@{
    Layout = "~/Views/Shared/ViewofProfiles/_Professional.cshtml";

    if (String.IsNullOrEmpty(Model.SpecialistId.ToString(CultureInfo.InvariantCulture)))
    {
        Response.Redirect("/Account/Logon");
    }

    if (ViewBag.EmailSharedwithFriend != null && ViewBag.EmailSharedwithFriend == true)
    {
        ViewBag.EmailSharedwithFriend = false;

    @:<!-- jNotify -->
    <script language='javascript' type='text/javascript'>
            @Html.Raw(ViewBag.EmailSucessSharedwithFriend)

    </script>
    }
}
<section class="row">
    <!--DONE-->
    @section name
    {
        @Model.FirstName @Model.LastName
    }
    @section specialist
    {
        <div id="agent" class="panel" style="width: 100%;">
            <img src="@Model.Photo" alt=" @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)" 
                 class="scale-with-grid"
                 alt="image" style="width:100% ; min-height: 300px ; max-height: 300px;" />
        </div>
    }
    @section work
    {
        <div id="photos" class="panel">
            <a id="fancybox-manual-c" href="javascript:;">
                <img src="@ViewBag.SpecialistPrimaryPhoto" class="scale-with-grid"
                     alt="image" style="width:100% ; min-height: 300px ; max-height: 300px;" />
            </a>
        </div>
    }
    @section map
    {
        <div id="map" class="panel">
            <iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.co.in/maps?q=@ViewBag.SpecialistGoogleMap&amp;z=13&amp;output=embed">
            </iframe>
            <br />
        </div>
    }
    <!--DONE-->
    
    
    

    @section specialistrequestform
    {
        <h4 class="remove-top BlueHeading">
            Hire @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
        <p>
            Please complete the form below to hire @Html.DisplayFor(model => model.FirstName)
            for your property.
        </p>
        <p>
        </p>
        <form action="#">
        <ul class="grid-form">
            @if (Request.IsAuthenticated)
            {
                <li class="four columns alpha">
                    <label for="your-name" class="screen-reader-text">
                        Your name</label>
                    <input id="your-name" placeholder="@User.Identity.Name" type="text" required />
                </li>
                <li class="four columns omega">
                    <label for="your-email" class="screen-reader-text">
                        E-mail</label>
                    <input id="your-email" placeholder=" @{var user = Membership.GetUser(User.Identity.Name); }
                                                         @if (user != null)
                                                         {
                                                             @user.Email
                                                         }" type="email" required />
                </li>
                <li class="four columns alpha">
                    <label for="your-telephone" class="screen-reader-text">
                        Your telephone</label>
                    <input id="your-telephone" placeholder="telephone" type="text" required />
                </li>
                <li class="four columns omega">
                    <label for="showing-date" class="screen-reader-text">
                        Service date</label>
                    <input id="datepicker" placeholder="service date" type="text" required />
                </li>

            }
            else
            {
                <li class="four columns alpha">
                    <label for="your-name" class="screen-reader-text">
                        Your name</label>
                    <input id="your-name-unknown" placeholder="Your name" type="text" required />
                </li>
                <li class="four columns omega">
                    <label for="your-email" class="screen-reader-text">
                        E-mail</label>
                    <input id="your-email-unknown" placeholder="email" type="email" required />
                </li>
                <li class="four columns alpha">
                    <label for="your-telephone" class="screen-reader-text">
                        Your telephone</label>
                    <input id="your-telephone-unknown" placeholder="telephone" type="text" required />
                </li>
                <li class="four columns omega">
                    <label for="showing-date-unknown" class="screen-reader-text">
                        Service date</label>
                    <input id="datepicker-unknown" placeholder="service date" type="text" required />
                </li>
            }
        </ul>
        <input type="submit" class="full-width tall" value="Hire @Html.DisplayFor(model => model.FirstName)" />
        </form>
    }
</section>
<section class="row double-bottom">
    @section description{
        <div id="description" class="panel">
            @{ Html.RenderAction("_Description", "Professionals", new { id = Model.SpecialistId }); }
        </div>
    }
    

    <!--DONE-->
    @section coverage
    {
        <div id="coverage" class="panel">
            @{ Html.RenderAction("_Coverage", "Professionals", new { id = Model.SpecialistId }); }
        </div>
    }
    <!--DONE-->
    
    

    @section share
    {
    
        //Continue from http://salman-w.blogspot.com/2013/05/jquery-ui-dialog-examples.html
        //The script is at the bottom with the id of test

        <div id="share-on-fb" class="panel">
            <ul class="grid-form row double-bottom " style="margin: 20px">
                <li class="six columns push by-one">
                    <a id="test" target="_blank" class="twitter-registration" style="text-align: center"
                             href="@Html.Raw(ViewBag.Twitter)">
                              Share it with your Twitter</a> 
                </li>
                <li class="six columns push by-two"><a target="_blank" class="facebook-registration"
                                                       style="text-align: center" href="@Html.Raw(ViewBag.FaceBook)"
                                                       onclick="jSuccess();">
                    Share it with your Facebook</a> </li>
            </ul>
            <ul class="grid-form row remove-bottom" style="margin: 20px">
                <li class="six columns push by-one"><a target="_blank" class="google-registration" style="text-align: center"
                    href="@Html.Raw(ViewBag.GooglePlusShare)">
                    Share it with your Google</a> </li>
                <li class="six columns push by-two"><a target="_blank" class="linkedin-registration" style="text-align: center"
                    href="@Html.Raw(ViewBag.LinkedIn)">
                    Share it with your Linked In</a> </li>
            </ul>
        </div>
    }
