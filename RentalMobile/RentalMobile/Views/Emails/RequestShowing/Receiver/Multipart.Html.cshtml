@using Postal
Content-Type: text/html; charset=utf-8
<div style="font-family: Arial, Helvetica, sans-serif; font-size: 18px; padding: 5px 50px 15px; color: #444444; ">
    <div style="text-align: center">
        <span style="text-align: center">Request from </span><span style="color: #800000;"><strong>@Model.SenderFirstName</strong></span><br />
    </div>
    <div>
        <p>
            Hi <span style="color: #800000;"><strong>@Model.FriendName ,</strong></span>
        </p>
        <br />
        <br />
        <span style="color: #800000;"><strong>@Model.SenderFirstName</strong></span> &nbsp;
        would like to schedule a showing of property xxxx Monday Tuesday 3 at 14:00 pm .<br /><br />
        Click To confirm appointment
        <br />
        <br />

        <p>
            <span style="color: #800000;"><strong>@Model.UnitTitle</strong></span>
            <br />
            <a href="@Model.UnitUrl">
                <img runat="server" src="@Model.UnitPath"
                     border="0" alt="" width="250" height="150"></img>
            </a>
        </p>
        <br />
        <br />
        <p>
            <a href="@Model.UnitUrl">Check out this property.</a>
        </p>
    </div>
</div>
