@using Postal
Content-Type: text/html; charset=utf-8
<div style="font-family: Arial, Helvetica, sans-serif; font-size: 18px; padding: 5px 50px 15px; color: #444444; ">
    <div style="text-align: center">
        <span style="text-align: center">Request from </span><span style="color: #800000;"><strong>@Model.RequesterName</strong></span><br />
    </div>
    <div>
        <p>
            Hi <span style="color: #800000;"><strong>@Model.ReceiverName ,</strong></span>
        </p>
        <br />
        <br />
        <span style="color: #800000;"><strong>@Model.RequesterName</strong></span> &nbsp;
        would like to schedule a showing of property <a href="@Model.UnitUrl"> @Model.UnitTitle  </a><span style="color: #800000;">@Model.ScheduleDate</span> .<br /><br />
     Tel: @Model.RequesterTelephone
        <br />
        <br />

        <p>
            <span style="color: #800000;"><strong>@Model.UnitTitle</strong></span>
            <br />
            <a href="@Model.UnitUrl">
                <img runat="server" src="@Model.UnitPath"
                     border="0" alt="" width="250" height="150"></img>
            </a>
        </p>
        <br />
        <br />
        <p>
           Please <span style="color: #800000;"> <a href="@Model.LinkConfirmation"> Click here </a> </span> To confirm Appointment.
        </p>
    </div>
</div>
