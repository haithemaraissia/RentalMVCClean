@using Postal
Content-Type: text/html; charset=utf-8
<div style="font-family: Arial, Helvetica, sans-serif; font-size: 18px; padding: 5px 50px 15px;
    color: #444444;">
    <div style="text-align: center">
        <span style="text-align: center">Request from </span><span style="color: #800000;"><strong>@Model.RequesterName</strong></span><br />
    </div>
    <div>
        <p>
            Hi <span style="color: #800000;"><strong>@Model.RequesterName ,</strong></span>
        </p>
        <br />
        <br />
        
        This is an automatic confirmation that you request to see the property has been
        successully completed<br />
        <br />
        We will update you on the status of the appointment shortly.
        <br />
        <br />
        

        <p>
            <a href="@Model.UnitUrl">@Model.UnitTitle </a><span style="color: #800000;">@Model.ScheduleDate</span>
            <br />
            <br />
            <br />
        </p>
        <p>
            <span style="color: #800000;"><strong>@Model.UnitTitle</strong></span>
            <br />
            <a href="@Model.UnitUrl">
                <img runat="server" src="@Model.UnitPath"
                     border="0" alt="" width="250" height="150"></img>
            </a>
        </p>
        <br />
        <br />
        <p>
            Thank you
        </p>
    </div>
</div>
