@using Postal
Content-Type: text/html; charset=utf-8
<div style="font-family: Arial, Helvetica, sans-serif; font-size: 18px; padding: 5px 50px 15px;color: #444444;">
    <div style="text-align: center">
        <span style="text-align: center">Request from </span><span style="color: #800000;"><strong>@Model.ProviderFirstName</strong></span><br />
    </div>
    <div>
        <p>
            Hi <span style="color: #800000;"><strong>@Model.SpecialistFirstName ,</strong></span>
        </p>
        <br />
        <br />
        <span style="color: #800000;"><strong><a href="@Model.ProviderProfileUrl">@Model.ProviderFirstName</a></strong></span> &nbsp;invite you to join&nbsp; his/her <a href="@Model.ProviderProfileUrl">team</a>.<br />
        .<br />
        <p>
            Can you please <a href="#">confirm/deny</a> this request?
        </p>
        <br/>
        <p>
            Thank you.
        </p>
    </div>
</div>
